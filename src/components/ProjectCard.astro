---
interface Props {
  title: string;
  description: string;
  detailLink: string;
  tags: string[];
  image?: string;
}

const { title, description, detailLink, tags, image } = Astro.props;

// Función para asignar colores a las etiquetas
const getTagColor = (tag: string) => {
  const colors: Record<string, string> = {
    'Angular': 'bg-gradient-to-r from-red-500 to-pink-500 text-white',
    'Android Nativo': 'bg-gradient-to-r from-green-500 to-emerald-500 text-white',
    'Swift': 'bg-gradient-to-r from-blue-500 to-indigo-500 text-white',
    'Firebase': 'bg-gradient-to-r from-yellow-500 to-orange-500 text-white',
    'Comunicación Municipal': 'bg-gradient-to-r from-purple-500 to-violet-500 text-white',
    'Social': 'bg-gradient-to-r from-pink-500 to-rose-500 text-white',
    'Gamificación': 'bg-gradient-to-r from-cyan-500 to-blue-500 text-white',
    'TypeScript': 'bg-gradient-to-r from-blue-600 to-blue-700 text-white',
    'Java': 'bg-gradient-to-r from-orange-600 to-red-600 text-white',
    'Spring Boot': 'bg-gradient-to-r from-green-600 to-green-700 text-white',
    'Flutter': 'bg-gradient-to-r from-blue-400 to-cyan-400 text-white',
    'PostgreSQL': 'bg-gradient-to-r from-indigo-600 to-purple-600 text-white',
    'Docker': 'bg-gradient-to-r from-blue-700 to-indigo-700 text-white'
  };
  
  return colors[tag] || 'bg-gradient-to-r from-slate-500 to-slate-600 text-white';
};
---
<div class="group glass-effect rounded-2xl overflow-hidden card-hover">
  <!-- Image placeholder or actual image -->
  <div class="h-48 bg-gradient-to-br from-blue-500 via-purple-500 to-pink-500 relative overflow-hidden">
    {image ? (
      <img src={image} alt={title} class="w-full h-full object-cover" />
    ) : (
      <div class="w-full h-full flex items-center justify-center">
        <div class="text-white/80 text-center">
          <svg class="w-16 h-16 mx-auto mb-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4"/>
          </svg>
          <p class="text-sm font-medium">Proyecto</p>
        </div>
      </div>
    )}
    
    <!-- Overlay with quick actions -->
    <div class="absolute inset-0 bg-black/60 opacity-0 group-hover:opacity-100 transition-all duration-300 flex items-center justify-center">
      <a 
        href={detailLink} 
        class="bg-white/20 backdrop-blur-sm p-4 rounded-full text-white hover:bg-white/30 transition-colors"
        title="Ver detalles del proyecto"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
      </a>
    </div>
  </div>
  
  <!-- Content -->
  <div class="p-6">
    <h3 class="text-xl font-bold mb-3 text-slate-800 dark:text-slate-200 group-hover:text-blue-600 dark:group-hover:text-blue-400 transition-colors">
      {title}
    </h3>
    <p class="text-slate-600 dark:text-slate-400 mb-6 leading-relaxed">
      {description}
    </p>
    
    <!-- Tags con colores mejorados -->
    <div class="flex flex-wrap gap-2 mb-6">
      {tags.map(tag => (
        <span class={`px-3 py-1.5 text-xs font-semibold rounded-full shadow-md hover:shadow-lg transform hover:scale-105 transition-all duration-200 ${getTagColor(tag)}`}>
          {tag}
        </span>
      ))}
    </div>

    <!-- Action button -->
    <div>
      <a 
        href={detailLink} 
        class="w-full bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 text-white font-semibold py-3 px-6 rounded-xl text-center transition-all duration-300 hover:shadow-xl hover:shadow-blue-500/25 transform hover:scale-105 flex items-center justify-center gap-2"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        Ver Detalles del Proyecto
      </a>
    </div>
  </div>
</div>