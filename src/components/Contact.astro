<script is:inline>
  // Configuración de EmailJS - Valores reales configurados
  const EMAILJS_SERVICE_ID = 'service_64dxm5i'; // Service ID de Gmail
  const EMAILJS_TEMPLATE_ID = 'template_g5t40o7'; // Template ID de Portafolios
  const EMAILJS_PUBLIC_KEY = 'kON92sICtmYj6iODZ'; // Public Key de la cuenta

  // Cargar EmailJS desde CDN
  const script = document.createElement('script');
  script.src = 'https://cdn.jsdelivr.net/npm/@emailjs/browser@4/dist/email.min.js';
  script.onload = function() {
    // Verificar configuración antes de inicializar
    if (EMAILJS_PUBLIC_KEY && EMAILJS_PUBLIC_KEY !== 'tu_public_key') {
      emailjs.init(EMAILJS_PUBLIC_KEY);
      console.log('EmailJS inicializado correctamente');
    } else {
      console.warn('EmailJS: Configuración incompleta. Por favor, actualiza las credenciales en Contact.astro');
    }
  };
  document.head.appendChild(script);

  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('contact-form');
    const statusDiv = document.getElementById('form-status');
    const submitBtn = document.getElementById('submit-btn');
    const btnText = document.getElementById('btn-text');

    // Verificar estado de configuración al cargar
    checkEmailJSConfiguration();

    if (form && statusDiv && submitBtn && btnText) {
      form.addEventListener('submit', async function(e) {
        e.preventDefault();

        // Deshabilitar botón y mostrar estado de carga
        submitBtn.disabled = true;
        btnText.textContent = 'Enviando...';
        submitBtn.classList.add('opacity-75', 'cursor-not-allowed');

        try {
          // Verificar que EmailJS esté cargado
          if (typeof emailjs === 'undefined') {
            throw new Error('EmailJS no está cargado');
          }

          // Verificar configuración
          if (EMAILJS_SERVICE_ID === 'tu_service_id' || 
              EMAILJS_TEMPLATE_ID === 'tu_template_id' || 
              EMAILJS_PUBLIC_KEY === 'tu_public_key') {
            throw new Error('EmailJS no está configurado correctamente. Por favor, actualiza las credenciales.');
          }

          // Enviar email usando EmailJS
          const result = await emailjs.sendForm(
            EMAILJS_SERVICE_ID,
            EMAILJS_TEMPLATE_ID,
            form
          );

          console.log('Email enviado exitosamente:', result);
          
          // Mostrar mensaje de éxito
          showStatus('success', '¡Mensaje enviado correctamente! Te responderé pronto.');
          
          // Limpiar formulario
          form.reset();

        } catch (error) {
          console.error('Error al enviar el mensaje:', error);
          
          // Mostrar mensaje de error más específico
          let errorMessage = 'Error al enviar el mensaje. ';
          
          if (error.message.includes('no está configurado')) {
            errorMessage += 'El formulario necesita configuración. Por favor, envía un email directamente a drogeralvarez@gmail.com';
          } else if (error.message.includes('no está cargado')) {
            errorMessage += 'Error de carga del servicio. Por favor, inténtalo de nuevo o envía un email directamente.';
          } else {
            errorMessage += 'Por favor, inténtalo de nuevo o envía un email directamente a drogeralvarez@gmail.com';
          }
          
          showStatus('error', errorMessage);
        } finally {
          // Rehabilitar botón
          submitBtn.disabled = false;
          btnText.textContent = 'Enviar Mensaje';
          submitBtn.classList.remove('opacity-75', 'cursor-not-allowed');
        }
      });
    }

    function showStatus(type, message) {
      if (!statusDiv) return;
      
      statusDiv.className = 'mb-6 p-4 rounded-lg ' + 
        (type === 'success' 
          ? 'bg-green-100 dark:bg-green-900/30 text-green-700 dark:text-green-300 border border-green-200 dark:border-green-800' 
          : 'bg-red-100 dark:bg-red-900/30 text-red-700 dark:text-red-300 border border-red-200 dark:border-red-800'
        );
      
      statusDiv.innerHTML = 
        '<div class="flex items-center gap-2">' +
          '<svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">' +
            (type === 'success' 
              ? '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>' 
              : '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>'
            ) +
          '</svg>' +
          message +
        '</div>';
      
      statusDiv.classList.remove('hidden');
      
      // Ocultar después de 5 segundos
      setTimeout(function() {
        if (statusDiv) {
          statusDiv.classList.add('hidden');
        }
      }, 5000);
    }

    function checkEmailJSConfiguration() {
      // Verificar si la configuración está usando valores por defecto o de ejemplo
      const isDefaultConfig = 
        EMAILJS_SERVICE_ID === 'tu_service_id' ||
        EMAILJS_TEMPLATE_ID === 'tu_template_id' ||
        EMAILJS_PUBLIC_KEY === 'tu_public_key';

      if (isDefaultConfig) {
        console.warn('EmailJS: Usando configuración de ejemplo. Para activar el formulario, actualiza las credenciales en Contact.astro');
        
        // Mostrar información de configuración después de un breve delay
        setTimeout(function() {
          if (statusDiv) {
            statusDiv.className = 'mb-6 p-4 rounded-lg bg-yellow-100 dark:bg-yellow-900/30 text-yellow-700 dark:text-yellow-300 border border-yellow-200 dark:border-yellow-800';
            statusDiv.innerHTML = 
              '<div class="flex items-start gap-2">' +
                '<svg class="w-5 h-5 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">' +
                  '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"/>' +
                '</svg>' +
                '<div>' +
                  '<p class="font-medium mb-1">Formulario en modo de prueba</p>' +
                  '<p class="text-sm">El formulario necesita configuración de EmailJS para funcionar. Mientras tanto, puedes contactarme directamente por email.</p>' +
                '</div>' +
              '</div>';
            statusDiv.classList.remove('hidden');
          }
        }, 1000);
      } else {
        console.log('EmailJS: Configuración completa. El formulario está listo para usar.');
      }
    }
  });
</script>